<html lang="zh-Hant-TW">
<head>
  <%- include('../partial/header', {title: "9EMBA-編輯聊天室"}); %>
</head>
<body data-nodeId="<%= node._id %>" data-type="chats" class="chat-edit-page">
  <div class="main-wrapper mb-5 rib chats">
      <nav class="navbar navbar-light bg-faded fixed-top">
        <div class="bg-faded clearfix text-center">
          <a href="/chats/<%= node._id %>" class="btn btn-outline-secondary float-left" style="width: 50px">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
          </a>
          <span class="navbar-text text-muted">
          編輯聊天室
          </span>
          
          <input
              id="edit-chat-submit"
              class="btn btn-outline-secondary float-right"
              style="width: 50px; border-color: transparent"
              form="edit-chat-form"
              value="完成"
              type="submit"/>
        </div>
      </nav>

      <div class="container rib-mt-65px">
        <div class="row pt-1">
          <div class="col-sm-12">
            <form id="edit-chat-form" data-toggle="validator">
              <div class="form-group">
                <textarea name="content"
                  class="form-control form-input-content"
                  id="content-textarea"
                  rows="5"
                  placeholder="想討論甚麼呢?" required><%= node.content %></textarea>
                  <div class="help-block with-errors rib-text-color-5"></div>
              </div>
              <div class="ribo-tag-list mb-2">
                <%if (node.tags) { %>
                  <% for(var i=0; i<node.tags.length; i++) {%>
                    <span class="badge badge-pill rib-text-color-3 mr-2 rib-bg-tag"><%= node.tags[i] %><i class="fa fa-times tag-delete-icon" aria-hidden="true"></i></span>
                    <input type="hidden" name="tagArray[]" value="<%= node.tags[i] %>">
                  <% } %>
                <% } %>
              </div>
              <div class="form-group">
                <label for="exampleInputTags" class="rib-f-size-dot8rem rib-text-color-3">Tags</label>
                <div class="input-group">
                  <input type="text" class="form-control form-input-tags" placeholder="Tags">
                  <span class="input-group-btn">
                    <button class="btn btn-collection input-tags-btn" type="button"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>
                  </span>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js" integrity="sha384-THPy051/pYDQGanwU6poAc/hOdQxjnOEXzbT+OuUAFqNqFjL+4IGLBgCJC3ZOShY" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <script src="./../../../js/chats.js"></script>
    <script src="./../../../js/front/tags.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.1/bootstrap3-typeahead.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
</body>
</html>
